{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "orientation": "vertical",
    "children": [
        {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "Shell",
            "gravity": "center",
            "textColor": "white",
            "layout_marginBottom": "6dip"
        },
        {
            "type": "Space",
            "layout_width": "match_parent",
            "layout_height": "1dip",
            "background": "white"
        },
        {
            "type": "Button",
            "id": "btn_start_shell",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "start",
            "background": "@null",
            "on_click": {
                "worker_id": "shell",
                "msg_id": "start"
            }
        },
        {
            "type": "Button",
            "id": "btn_hello",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "hello",
            "background": "@null",
            "on_click": {
                "worker_id": "shell",
                "msg_id": "command",
                "command": "say_hello"
            }
        },
        {
            "type": "Button",
            "id": "btn_hello2",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "hello2",
            "background": "@null",
            "on_click": {
                "worker_id": "shell",
                "msg_id": "command",
                "command": "say_something_else"
            }
        },
        {
            "type": "Button",
            "id": "btn_stop_shell",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "stop",
            "background": "@null",
            "on_click": {
                "worker_id": "shell",
                "msg_id": "stop"
            }
        }
    ]
}
