{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "orientation": "horizontal",
    "gravity": "center",
    "padding": "16dip",
    "children": [
    {
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "text": "Fuel level 80%",
        "textColor": "#aa00ff00",
        "lines": 1,
        "ellipsize": "end",
        "shadow": { "dx": 5, "dy": 5, "radius": 8, "color": "black" }
    },
    {
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "layout_marginLeft": "12dip",
        "text": "6500 rpm",
        "textColor": "#aaff0000",
        "shadow": { "dx": 5, "dy": 5, "radius": 8, "color": "black"
      }
    }
  ]
}
