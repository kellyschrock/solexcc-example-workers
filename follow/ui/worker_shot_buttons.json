{
    "type": "LinearLayout",
    "layout_width": "wrap_content",
    "layout_height": "wrap_content",
    "orientation": "vertical",
    "background": "#66000000",
    "children": [
      {
        "type": "TextView",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "padding": 10,
        "text": "Follow Locations",
        "textColor": "white"
      },
      {
        "type": "Space",
        "layout_width": "match_parent",
        "layout_height": 2,
        "background": "#aaffffff"
      },
      {
          "type": "LinearLayout",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "orientation": "horizontal",
          "gravity": "center_vertical",
          "padding": 12,
          "children": [
            {
              "type": "Button",
              "id": "start",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "text": "Start",
              "textAllCaps": false,
              "background": "@null",
              "on_click": {
                "worker_id": "follow",
                "msg_id": "start"
              }
            },
            {
              "type": "Button",
              "id": "stop",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "text": "Stop",
              "textAllCaps": false,
              "background": "@null",
              "on_click": {
                "worker_id": "follow",
                "msg_id": "stop"
              }
            }
          ]
      }
    ]
}
